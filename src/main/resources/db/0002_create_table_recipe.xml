<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0002_create_table_recipe" author="paul">
        <createTable tableName="recipe">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="recipe_name" type="VARCHAR(100)"/>
            <column name="ingredients" type="VARCHAR(500)"/>
            <column name="description" type="VARCHAR(1500)"/>
            <column name="number_of_likes" type="INT"/>
            <column name="category_id" type="BIGINT"/>
        </createTable>

        <addForeignKeyConstraint baseTableName="recipe"
                                 baseColumnNames="category_id"
                                 constraintName="fk_category_id"
                                 referencedTableName="category"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>